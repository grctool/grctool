# AI Development Environment Configuration
# Copy this file to .env and fill in your API keys

# AI Service API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LANGCHAIN_API_KEY=
HUGGINGFACE_API_TOKEN=

# GitHub Configuration
GITHUB_TOKEN=ghp_...
GITHUB_USER=
GITHUB_EMAIL=

# Database Configuration (optional - used with --profile with-db)
POSTGRES_PASSWORD=development
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (optional - used with --profile with-cache)
REDIS_HOST=redis
REDIS_PORT=6379

# ChromaDB Configuration (optional - used with --profile with-vectordb)
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Project Configuration
PROJECT_NAME=my-ai-project
ENVIRONMENT=development

# Resource Limits (override in docker-compose.override.yml if needed)
# DOCKER_CPUS=4
# DOCKER_MEMORY=8G